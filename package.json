{
  "name": "scripts",
  "displayName": "Scripts",
  "description": "Automate vscode using external scripts",
  "version": "0.0.1-alpha.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scripts.run",
        "title": "Run external script on the current file"
      },
      {
        "command": "scripts.files.open",
        "title": "Opens a file by absolute path"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
